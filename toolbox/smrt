#!/bin/sh

# Run a SMRTLink tool (specific version)
smrt_bin=/lustre/software/pacbio_smrttools/smrttools_5.0.1.9585/smrtcmds/bin
if [ -z "$*" ] ; then
    echo
    echo "usage: smrt <program> [args]"
    echo
    echo "Tools available in $smrt_bin:"
    ls "$smrt_bin"
else
    exec env PATH="$smrt_bin:$PATH" "$@"
fi
